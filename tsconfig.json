{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@content/*": [
        "./content/*"
      ],
      "next-sanity": [
        "./types/stubs/next-sanity"
      ],
      "next-sanity/studio": [
        "./types/stubs/next-sanity-studio"
      ],
      "sanity": [
        "./types/stubs/sanity"
      ],
      "sanity/desk": [
        "./types/stubs/sanity-desk"
      ],
      "@sanity/image-url": [
        "./types/stubs/sanity-image-url"
      ]
    },
    "types": [
      "node"
    ],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
