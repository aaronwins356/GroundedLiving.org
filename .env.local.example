# Site URL used for metadata, OG images, and sitemap generation
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Contentful credentials (Delivery API)
CONTENTFUL_SPACE_ID=your_space_id
CONTENTFUL_ENVIRONMENT=master
CONTENTFUL_DELIVERY_TOKEN=delivery_api_token
CONTENTFUL_PREVIEW_TOKEN=preview_api_token

# Secret shared with the Contentful webhook to trigger on-demand revalidation
CONTENTFUL_REVALIDATE_SECRET=replace-with-long-random-string

# Optional: management token for one-off scripts or Contentful CLI usage
CONTENTFUL_MANAGEMENT_TOKEN=
